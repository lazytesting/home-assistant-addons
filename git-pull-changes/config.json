{
    "name": "Git pull changes",
    "version": "0.17",
    "slug": "git_pull_changes",
    "description": "Synchronize remote git repo to local config golder",
    "startup": "services",
    "boot": "manual",
    "hassio_api": true,
    "map": ["config:rw"],
    "options": {
      "deployment_key": [],
      "deployment_key_protocol": "rsa",
      "repository": null,
      "auto_restart": false,
      "repeat": {
        "active": false,
        "interval": 300
      }
    },
    "schema": {
      "deployment_key": ["str"],
      "deployment_key_protocol": "match(rsa|dsa|ecdsa|ed25519|rsa)",
      "repository": "match((?:.+):(\/\/)?(.*?)(\\.git)(\/?|\\#[-\\d\\w._]+?))",
      "auto_restart": "bool",
      "repeat": {
        "active": "bool",
        "interval": "int"
      }
    }
  }
  